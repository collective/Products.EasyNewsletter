<tal:blockmain define="enl_helpers here/@@enl_helpers;
          source options/result_info;
          ">

  <table border="0"
    cellpadding="0"
    cellspacing="0">
    <!-- MODULE ROW // -->
    <tr>
      <td align="center"
        valign="top">
        <table border="0"
          cellpadding="0"
          cellspacing="0"
          width="100%">
          <tr>
            <td align="center"
              valign="top">
              <table border="0"
                cellpadding="0"
                cellspacing="0"
                width="600"
                class="flexibleContainer">
                <tr>
                  <td align="center"
                    valign="top"
                    width="600"
                    class="flexibleContainerCell">

                    <!-- CONTENT TABLE // -->
                    <table border="0"
                      cellpadding="0"
                      cellspacing="0"
                      width="100%">
                      <tr>
                        <td valign="top"
                          class="textContent">
                          <h3 tal:content="source/title">Title</h3>
                          <br />
                          <span tal:replace="source/description"></span>
                        </td>
                      </tr>
                    </table>
                    <!-- // CONTENT TABLE -->

                  </td>
                </tr>
              </table>
              <!-- // FLEXIBLE CONTAINER -->
            </td>
          </tr>
        </table>
        <!-- // CENTERING TABLE -->

      </td>
    </tr>
    <!-- // MODULE ROW -->


    <tal:blockitems repeat="brain source/brains"

      i18n:domain="EasyNewsletter">

        <!-- MODULE ROW // -->
        <tr tal:define="item_obj brain/getObject">
          <td align="center"
            valign="top">

            <!-- CENTERING TABLE // -->
            <table border="0"
              cellpadding="0"
              cellspacing="0"
              width="100%">
              <tr>
                <td align="center"
                  valign="top">

                  <!-- FLEXIBLE CONTAINER // -->
                  <table border="0"
                    cellpadding="0"
                    cellspacing="0"
                    width="600"
                    class="flexibleContainer">
                    <tr>
                      <td align="center"
                        valign="top"
                        width="600"
                        class="flexibleContainerCell bottomShim">
                        <table border="0"
                          cellpadding="0"
                          cellspacing="0"
                          width="100%"
                          class="nestedContainer">
                          <tr>
                            <td valign="top"
                              class="nestedContainerCell"
                              tal:define="has_image python: enl_helpers.brain_has_lead_image(brain);
    														             obj_url brain/getURL">

                              <!-- CONTENT TABLE // -->
                              <table tal:condition="has_image"
                                align="Left"
                                border="0"
                                cellpadding="0"
                                cellspacing="0"
                                width="200"
                                class="flexibleContainer leadImage">
                                <tr>
                                  <td align="Left"
                                    valign="top"
                                    class="imageContent">
                                    <a tal:attributes="href obj_url"
                                      target="_top">
                                      <img class="flexibleImage"
                                        width="200"
                                        style="max-width:200px;"
                                        tal:attributes="src string:${obj_url}/@@images/image/mini" />
                                    </a>
                                  </td>
                                </tr>
                              </table>
                              <!-- // CONTENT TABLE -->

                              <!-- CONTENT TABLE // -->
                              <table tal:attributes="width python: (has_image and '290') or '520'"
                                align="Right"
                                border="0"
                                cellpadding="0"
                                cellspacing="0"
                                width="290"
                                class="flexibleContainer">
                                <tr>
                                  <td valign="top"
                                    class="textContent">
                                    <h3>
                                      <a tal:attributes="href obj_url"
                                        target="_top"
                                        tal:content=" brain/Title"
                                        target="_top"
                                        style="text-decoration: none; color: #404040;">
                                      Title
                                      </a>
                                    </h3>
                                    <br />
                                    <span tal:replace="brain/Description">
                                    Description
                                    </span>
                                    <br tal:condition="brain/Description" />
                                    <span tal:replace="structure item_obj/@@event_summary"></span>
                                    <a i18n:translate="read_more"
                                      tal:attributes="href obj_url"
                                      target="_top">Read More&hellip;</a>
                                  </td>
                                </tr>
                              </table>
                              <!-- // CONTENT TABLE -->

                            </td>
                          </tr>
                        </table>
                      </td>
                    </tr>
                  </table>
                  <!-- // FLEXIBLE CONTAINER -->
                </td>
              </tr>
            </table>
            <!-- // CENTERING TABLE -->
          </td>
        </tr>

    </tal:blockitems>

  </table>
</tal:blockmain>
