<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="EasyNewsletter">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
           tal:define="kssClassesView context/@@kss_field_decorator_view;
                       getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                       templateId template/getId;
                       text here/getText;">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading">
            <metal:field use-macro="python:here.widget('title', mode='view')">
            Title
            </metal:field>
        </h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />

	   <p class="documentDescription">
            <metal:field use-macro="python:here.widget('description', mode='view')">
            Description
            </metal:field>
        </p>

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <div metal:define-macro="text-field-view"
             id="parent-fieldname-text" class="stx"
             tal:define="kss_class python:getKssClasses('text',
                         templateId=templateId, macro='text-field-view');
                         text here/getText|nothing"
             tal:condition="text"
             tal:attributes="class python:here.Format() in ('text/structured', 'text/x-rst', ) and 'stx' + kss_class or 'plain' + kss_class">
            <div metal:define-slot="inside" tal:replace="structure text">The body</div>
        </div>


        <form id='newsletter' method='get' action='@@register-subscriber'>
            <div>
                <input type="hidden" name="newsletter" value="newsletter"
                        tal:attributes="value python: '/'.join(request.physicalPathToVirtualPath(context.getPhysicalPath()))" />

                <input class="texte" onclick="this.value=''" name="subscriber" value="Your email" i18n:attributes="value easynewsletter_input_value;" />

                <input class="texte submit"  id='w_submit' type="submit" value="ok" i18n:attributes="value easynewsletter_button_label;" />

                <div class="spacer"></div>

                <label for='w_sub' i18n:translate="">easynewsletter_label_subscription</label>
                <input type='radio' value='subscription' class="radio"  id='w_sub' name='subscription' checked="checked" />
                <span tal:omit-tag="" i18n:translate="easynewsletter_label_subscription">Subscription</span>
                <br />

                <label for='w_unsub' i18n:translate="">easynewsletter_label_unsubscription</label>
                <input type='radio' value='unsubscription' class="radio" id='w_unsub' name='subscription' />
                <span tal:omit-tag="" i18n:translate="easynewsletter_label_unsubscription">Unsubscription</span>

            </div>
        </form>


        <h2 i18n:translate="last_issues_label">Last issues</h2>
        <tal:block metal:define-macro="folderlisting"
                   tal:define="newsletters python:context.portal_catalog(portal_type='ENLIssue',
                                                                         review_state='sent',
                                                                         sort_on='Date',
                                                                         sort_order='reverse',
                                                                         sort_limit=5,
                                                                         path='/'.join(context.getPhysicalPath()))[:5]">
             <div tal:condition="not: newsletters"
                  i18n:translate="easynewsletter_non_issues_label">
               There are no issues.
             </div>

              <ul>
                <li tal:repeat="newsletter newsletters">
                    <a tal:define="date python:context.toLocalizedTime(newsletter.created,long_format=0)"
                       tal:content="string:$date: ${newsletter/Title}"
                       tal:attributes="href newsletter/getURL">Newsletter's title and Date</a>
               </li>
             </ul>
        </tal:block>

        <h2>
            <a tal:attributes="href python:context.absolute_url() + '/easynewsletter_view'" class="summary url" i18n:translate="archives">Archives</a>
        </h2>

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>

