<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="EasyNewsletter">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
           tal:define="kssClassesView context/@@kss_field_decorator_view;
                       getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                       templateId template/getId;
                       text here/getText;">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading">
            <span tal:omit-tag=""
                  i18n:translate="easynewsletter_subcribers_label">Subscribers</span>
        </h1>

        <div tal:define="subscribers python:context.portal_catalog(portal_type = 'ENLSubscriber',
                                                                   path='/'.join(context.getPhysicalPath()));
                         Batch python:modules['Products.CMFPlone'].Batch;
                         b_start python:request.get('b_start',0);
                         batch python:Batch(subscribers, 10, int(b_start), orphan=1)">

            <div tal:condition="not: subscribers"
                  i18n:translate="easynewsletter_nosubscribers_label">
                 There are no subscribers.
            </div>

            <div metal:use-macro="here/batch_macros/macros/navigation" />

            <ul>
                <li tal:repeat="subscriber batch">
                    <a tal:content="string:${subscriber/Title}"
                       tal:attributes="href string:${subscriber/getURL}">
                       E-Mail
                    </a>
                    <a href="#" 
                       tal:attributes="href string:${subscriber/getURL}/delete_confirmation">
                           <img tal:attributes="alt string:Delete subscriber;
                                                title string:Delete subscriber;
                                                src string:delete_icon.png" />
                    </a> 
                </li>
            </ul>
        </div>

    </tal:main-macro>
</metal:main>

</body>
</html>
